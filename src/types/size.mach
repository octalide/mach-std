$if (target.pointer_size == 2) {
    pub def usize: u16;
    pub def isize: i16;
}
or (target.pointer_size == 4) {
    pub def usize: u32;
    pub def isize: i32;
}
or (target.pointer_size == 8) {
    pub def usize: u64;
    pub def isize: i64;
}
or {
    # default to 64-bit size
    pub def usize: u64;
    pub def isize: i64;
}
